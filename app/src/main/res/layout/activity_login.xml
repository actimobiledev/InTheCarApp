<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_layout"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_app_logo"
                android:layout_margin="@dimen/activity_margin_extra_extra_large"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_login_path"
                    android:layout_marginRight="@dimen/activity_margin_extra_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:padding="@dimen/edittext_padding"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_color_light_white"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter your email/phone"
                        android:paddingLeft="@dimen/edittext_padding"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color_light_white" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="@color/text_color_light_white"
                        android:padding="@dimen/edittext_padding"
                        android:layout_marginRight="60dp"
                        android:textSize="@dimen/text_size_small"></EditText>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/text_color_light_white"
                        android:layout_marginLeft="@dimen/edittext_padding"
                        android:layout_marginRight="60dp"></View>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Login Code Provide By Auto Deler"
                        android:padding="@dimen/edittext_padding"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/text_color_light_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:maxEms="1"
                                android:text="1"

                                android:textColor="@color/text_color_light_white"
                                android:padding="@dimen/edittext_padding"
                                android:layout_marginRight="60dp"
                                android:textSize="@dimen/text_size_small"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/text_color_light_white"
                                android:layout_marginLeft="@dimen/edittext_padding"
                                android:layout_marginRight="60dp"/>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>








        </LinearLayout>





    </RelativeLayout>






</androidx.coordinatorlayout.widget.CoordinatorLayout>